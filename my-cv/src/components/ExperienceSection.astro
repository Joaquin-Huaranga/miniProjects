---
import {experiencesList} from "../data-list"
---

<section class="bg-white py-20" id="experience">
    <div class="max-w-5xl mx-auto px-6">
        <h2 class="text-4xl font-extrabold text-blue-700 mb-12 text-center">ðŸ“˜ Experiencia</h2>

        <div class="space-y-10">
            {
                experiencesList.map((exp)=>(
                        <div class="bg-blue-50 rounded-xl p-6 shadow hover:shadow-lg transition">
                            <div class="flex justify-between items-center flex-wrap">
                                <h3 class="text-xl font-semibold text-blue-800">{exp.role}</h3>
                                <span class="text-sm text-gray-500">{exp.period}</span>
                            </div>
                            <p class="text-sm text-gray-600 italic">{exp.company}</p>
                            <p class="text-gray-700 mt-3">
                                {exp.description}
                            </p>
                            <div class="flex flex-wrap gap-2 mt-4">
                                {
                                    exp.technologies.map((tech)=>(
                                            <span class="bg-white border border-blue-600 text-blue-600 px-3 py-1 rounded-full text-sm">{tech}</span>
                                    ))
                                }
                            </div>
                        </div>
                ))
            }
        </div>
    </div>
</section>
