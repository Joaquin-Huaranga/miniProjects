---
import { experiencesList } from "../data-list"
---

<section class="bg-gray-900 py-20" id="experience">
    <div class="max-w-5xl mx-auto px-6">
        <h2 class="text-4xl font-extrabold text-blue-400 mb-12 text-center">ðŸ“˜ Experiencia</h2>

        <div class="grid gap-8">
            {
                experiencesList.map((exp) => (
                        <div class="bg-gray-800 rounded-2xl p-6 shadow-md hover:shadow-lg transition duration-300">
                            <div class="flex justify-between items-start flex-wrap gap-2">
                                <div>
                                    <h3 class="text-xl font-semibold text-white">{exp.role}</h3>
                                    <p class="text-sm text-gray-400 italic">{exp.company}</p>
                                </div>
                                <span class="text-sm text-gray-500">{exp.period}</span>
                            </div>

                            <p class="text-gray-300 mt-4 leading-relaxed">
                                {exp.description}
                            </p>

                            <div class="flex flex-wrap gap-2 mt-4">
                                {
                                    exp.technologies.map((tech) => (
                                            <span class="bg-gray-900 border border-blue-500 text-blue-400 px-3 py-1 rounded-full text-sm">
                    {tech}
                  </span>
                                    ))
                                }
                            </div>
                        </div>
                ))
            }
        </div>
    </div>
</section>
