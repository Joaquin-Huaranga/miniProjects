---
import ContentWidth from "./ContentWidth.astro";

const items = [
    {
        "title": "Trabajos Recientes",
        "description": "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ad cum delectus in iure mollitia qui soluta voluptatum. Asperiores autem ea, eius in minima, natus pariatur placeat quaerat quasi tempora voluptates!"
    },
    {
        "title": "Proyectos Futuros",
        "description": "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Error, ipsa, voluptatum? At commodi consequuntur ea ipsa iste labore magni modi, nostrum pariatur perspiciatis, quas ratione sed sit tenetur unde voluptate."
    }
];
---
<section class="py-16 bg-white">
    <ContentWidth>
        <div class="flex flex-col lg:flex-row items-center gap-10 lg:gap-20 px-4 sm:px-8 md:px-12">
            <div class="w-full lg:w-1/2">
                <img
                        src="/image/temporal-image1.jpg"
                        alt="Temporal image"
                        class="w-full h-auto rounded-2xl hover:scale-105 transition ease-in object-cover"
                />
            </div>
            <div class="w-full lg:w-1/2">
                {items.map((i) => (
                        <div class="mb-10 last:mb-0">
                            <h2 class="text-2xl md:text-3xl font-semibold text-blue-700">{i.title}</h2>
                            <div class="w-12 h-1.5 bg-blue-600 rounded-full my-3"></div>
                            <p class="text-gray-700 text-base md:text-lg leading-relaxed">{i.description}</p>
                        </div>
                ))}
            </div>

        </div>
    </ContentWidth>
</section>
