---
import ContentWidth from "./ContentWidth.astro";
import { Icon } from "astro-icon/components";

const items = [
    {
        "title": "Trabajos Recientes",
        "description": "Explora mis últimos proyectos desarrollados con tecnologías modernas como React, Astro y Tailwind CSS. Cada trabajo representa soluciones creativas a desafíos reales.",
        "icon": "mdi:code-braces"
    },
    {
        "title": "Proyectos Futuros",
        "description": "Descubre lo que viene en mi pipeline de desarrollo. Próximamente implementaré proyectos con IA, aplicaciones interactivas y contribuciones open-source.",
        "icon": "mdi:lightbulb-on"
    }
];
---
<section id="home" class="py-20 bg-gradient-to-b from-gray-900 to-gray-800">
    <ContentWidth>
        <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16 px-4 sm:px-6">
            <div class="w-full lg:w-1/2 relative group">
                <img
                        src="/image/temporal-image1.jpg"
                        alt="Mostrador de proyectos"
                        class="w-full h-auto rounded-xl shadow-lg transition-all duration-500 group-hover:shadow-xl group-hover:-translate-y-1 object-cover border border-gray-700"
                        loading="lazy"
                />
                <div class="absolute -inset-2 bg-blue-500/10 rounded-xl -z-10 group-hover:bg-blue-500/20 transition duration-500"></div>
            </div>
            <div class="w-full lg:w-1/2">
                <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">Mis <span class="text-blue-400">Proyectos</span></h2>

                {items.map((i) => (
                        <div class="mb-12 last:mb-8 group">
                            <div class="flex items-start gap-4">
                                <div class="p-2.5 bg-gray-700 rounded-lg text-blue-400 group-hover:bg-blue-600 group-hover:text-white transition-colors">
                                    <Icon name={i.icon} size="24" />
                                </div>
                                <div>
                                    <h3 class="text-xl md:text-2xl font-semibold text-white group-hover:text-blue-400 transition-colors">{i.title}</h3>
                                    <div class="w-12 h-1.5 bg-blue-500 rounded-full my-3"></div>
                                    <p class="text-gray-300 leading-relaxed">{i.description}</p>
                                </div>
                            </div>
                        </div>
                ))}
                <a
                        href="#projects"
                        class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-500 hover:to-blue-400 text-white font-medium rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-400 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-800"
                >
                    Ver todos los proyectos
                    <Icon name="mdi:arrow-right" class="group-hover:translate-x-1 transition-transform" />
                </a>
            </div>
        </div>
    </ContentWidth>
</section>