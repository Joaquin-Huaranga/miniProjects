---
import ContentWidth from "./ContentWidth.astro";

const projects = [
    {
        title: "Portafolio Personal",
        image: "/image/temporal-image1.jpg",
        description:
            "Dise침ado y desarrollado con Astro y Tailwind, implementando dise침o responsivo y buenas pr치cticas de desarrollo frontend.",
        tech: ["Astro", "Tailwind CSS"],
        link: "/"
    },
    {
        title: "Pagina Web para Circulo Militar - STS",
        image: "/image/temporal-image1.jpg",
        description:
            "Pagina Web para CMSTS usando Astro, Wordpress Headless y Tailwind. Optimizada para m칩viles.",
        tech: ["Wordpress Headless", "Astro", "Tailwind CSS"],
