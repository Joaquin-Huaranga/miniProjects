---
import ProductCard from './ProductCard.astro'
const { data } = Astro.props;
---

<div>
  <div class="text-center px-4 max-w-4xl mx-auto">
    {data.heroImage && (
      <img
        src={data.heroImage}
        alt={data.title}
        loading="lazy"
        class="mx-auto mb-6 rounded-xl shadow-lg"
        width="1200"
        height="600"
      />
    )}

    <h1 class="text-4xl font-bold tracking-tight">{data.title}</h1>

    {data.subtitle && (
      <p class="text-xl mt-2 opacity-80">{data.subtitle}</p>
    )}

    {data.intro && (
      <p class="my-6 text-lg leading-relaxed">{data.intro}</p>
    )}

    {data.highlights && (
      <ul class="grid sm:grid-cols-2 gap-2 text-left mt-4">
        {data.highlights.map((item) => <li>•{item}</li>)}
      </ul>
    )}
  </div>

  {data.items && (
    <div class="my-12 max-w-6xl mx-auto px-4">
      <h2 class="text-2xl font-bold mb-6">Artículos destacados</h2>

      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
        {data.items.map((item) => <ProductCard item={item} />)}
      </div>
    </div>)}

</div>